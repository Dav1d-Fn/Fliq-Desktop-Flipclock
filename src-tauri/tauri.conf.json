{
  "productName": "desktop-flipclock",
  "version": "0.0.0",
  "identifier": "com.flipclock.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {"windows": [
      {
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "title": "Desktop Flipclock",
        "maximizable": false,
        "resizable": false,
        "alwaysOnTop": true,
        "width": 300,
        "height": 150
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "windows": {
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        }
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
